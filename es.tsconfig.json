{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "ESNext",
        "DOM"
      ],
      "module": "amd",
      "allowJs": true,
      "outFile": "./example/build.js",
      "rootDir": "./src",
      "removeComments": true,
      "strict": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": [
      "./webworker-script",
      "./scripts",
      "./node_modules",
      "./lib",
      "./test",
      "./example",
      "./__tests__",
      "./jest.config.js",
      "./coverage",
      "./.github",
      "./.vscode",
      "./docs"
    ]
  }
  